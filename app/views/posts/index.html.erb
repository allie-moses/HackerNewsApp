<h1>Posts index</h1>

<% if @current_user %>
  <%= link_to "Add new post", new_post_path, class: "btn btn-primary" %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Post writer</th>
      <th>Post title</th>
      <th>Post link</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.user.name, post.user %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.link %></td>
        <% if @current_user == post.user %>
          <td><%= link_to "Update post", edit_post_path(post), class: "btn btn-warning" %></td>
          <td><%= link_to "Delete post", post_path(post), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>