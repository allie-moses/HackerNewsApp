<h1>Users index</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password_digest</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <% if user == @current_user %>
          <td><%= user.email %></td>
          <td><%= user.password_digest %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>